@{
    ViewBag.Title = "Concursos";
    int contador = 1;
}

<!DOCTYPE html>
<html>
<head>
    <title>Concursos</title>
    <meta charset="utf-8" />
    <!--<link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Utils/css/actividades.css">-->
    <link rel="stylesheet" type="text/css" href="~/Utils/css/botonesCompartir.css">
    <link rel="stylesheet" type="text/css" href="~/Utils/css/adminConcurso.css">
    <link rel="stylesheet" type="text/css" href="~/Utils/css/listadoParticipantes.css">
</head>
<body>

    <span class="titulo">Participantes</span>
    <div class="card align-items-center" id="listado">
        @foreach (var participante in ViewBag.participantes)
        {
            <div class="col-md-12">
                <p>
                    @contador)
                    <a href=@Url.Action("DeclararGanador", "Concurso", new { @nombreDelConcurso = ViewBag.nombreConcurso, @correoParticipante = participante})>
                        @participante
                    </a>
                </p>
            </div>
        }
    </div>  
    <br />
    <br />
    <br />
</body>
</html>